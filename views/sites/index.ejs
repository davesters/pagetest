<% layout(layoutPath) -%>

<div class="col-xs-12">
    <p><a href="/sites/new" class="btn btn-primary">New Site</a></p>
    <hr/>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Base URL</th>
                <th>Branch</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <% for (var i = 0; i < sites.length; i++) { %>
            <tr>
                <td><a href="/sites/view/<%= sites[i]._id %>"><%= sites[i].name %></a></td>
                <td><%= sites[i].urlBase %></td>
                <td><%= sites[i].branchName %></td>
                <td><a href="/sites/edit/<%= sites[i]._id %>">edit</a></td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>