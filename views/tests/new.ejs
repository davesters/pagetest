<% layout(layoutPath) -%>

<div class="col-xs-4">
    <h2>New Test</h2>
    <h4>Site: <%= site.name %></h4>

    <form action="/tests/new" method="post">
        <input type="hidden" name="siteId" value="<%= site._id %>" />
        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" name="name" />
        </div>
        <div class="form-group">
            <label>URL: (relative to: <%= site.urlBase %>)</label>
            <input type="text" name="url" class="form-control" placeholder="<%= site.urlBase %>" />
        </div><br />

        <input type="submit" class="btn btn-primary" value="Add Test" />
    </form>
</div>