<% layout(layoutPath) -%>

<div class="col-xs-4">
    <h2>Edit Test</h2>
    <h4>Site: <%= site.name %></h4>

    <form action="/tests/edit" method="post">
        <input type="hidden" name="_id" value="<%= test._id %>" />
        <input type="hidden" name="siteId" value="<%= site._id %>" />
        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" name="name" value="<%= test.name || "" %>" />
        </div>
        <div class="form-group">
            <label>URL: (relative to: <%= site.urlBase %>)</label>
            <input type="text" name="url" class="form-control" value="<%= test.url || "" %>" placeholder="<%= site.urlBase %>" />
        </div><br />

        <input type="submit" class="btn btn-primary" value="Update Test" />
    </form>
</div>